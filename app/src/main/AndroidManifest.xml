<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evirus.sonisobattani">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/caping"
        android:label="@string/app_name"
        android:roundIcon="@drawable/caping"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoNiSobatTaNi">

        <activity
            android:name=".SolusiActivity"
            android:label="@string/title_activity_solusi"/>
        <activity android:name=".PindaiTanaman" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SoNiSobatTaNi.NoActionBar" />
    </application>

</manifest>