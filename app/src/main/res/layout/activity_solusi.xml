<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SolusiActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Linear layout to contain 2 text view and button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- showing random text 1 from strings.xml file -->
            <TextView
                android:id="@+id/Penyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Penyakit"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/Gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Gejala"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                />

            <!-- simple button -->

            <!-- showing random text 2 from strings.xml file -->

            <TextView
                android:id="@+id/DeskripsiGejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"

                android:text="@string/gejala"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/Solusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Solusi Pengendalian"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:id="@+id/DeskripsiSolusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/solusi_pengendalian"
                android:textSize="18sp"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>